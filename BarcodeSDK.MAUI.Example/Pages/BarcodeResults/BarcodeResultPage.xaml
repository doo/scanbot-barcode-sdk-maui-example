<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:ScanbotSDK.MAUI.Example.Utils.XamlValueConverters"
             xmlns:models="clr-namespace:ScanbotSDK.MAUI.Barcode.Core;assembly=ScanbotSDK.Shared"
             x:Class="ScanbotSDK.MAUI.Example.Pages.BarcodeResultPage"
             Title="Barcode Results">
    <ContentPage.Resources>
        <converter:ImageRefToSourceConverter x:Key="ConvertImageRefToSource" />
    </ContentPage.Resources>
    <StackLayout
        BackgroundColor="White">
        <StackLayout>
            <Image x:Name="BarcodeImageView"
                   Aspect="AspectFit"
                   MaximumHeightRequest="300"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   BackgroundColor="Transparent" />
        </StackLayout>
        <ListView x:Name="ListViewResults"
                  HasUnevenRows="True"
                  ItemSelected="ListView_Results_OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:BarcodeItem">
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                HorizontalOptions="Fill"
                                VerticalOptions="Fill"
                                Aspect="AspectFit"
                                Source="{Binding SourceImage, Converter={StaticResource ConvertImageRefToSource}}" />
                            <VerticalStackLayout
                                Grid.Column="1"
                                Margin="5">
                                <Label Margin="0,5,0,0"
                                       Text="Format:"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="Black" />
                                <Label
                                    Text="{Binding Format}"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Start"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    TextColor="Black" />
                                <Label
                                    Margin="0,9,0,0"
                                    Text="Text: "
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    TextColor="Black" />
                                <Label Text="{Binding Text}"
                                       FontSize="14"
                                       MaxLines="3"
                                       TextColor="Black" />
                            </VerticalStackLayout>
                            <Grid Grid.Column="2">
                                <Label Text=">"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />
                            </Grid>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>