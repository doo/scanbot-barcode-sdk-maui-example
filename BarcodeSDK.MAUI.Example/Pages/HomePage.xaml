<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanbotSDK.MAUI.Example.Pages.HomePage"
             xmlns:model="clr-namespace:ScanbotSDK.MAUI.Example.Pages">
    <Grid
        BackgroundColor="{DynamicResource ScanbotRed}"
        RowDefinitions="Auto,*">
        <VerticalStackLayout
            Grid.Row="0"
            Padding="9">
            <Label
                Text="ScanbotBarcodeSDK MAUI"
                VerticalOptions="Fill"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                TextColor="White"
                BackgroundColor="Transparent"
                FontSize="24" />
        </VerticalStackLayout>
        <ScrollView
            Grid.Row="1"
            BackgroundColor="White">
            <StackLayout>
                <CollectionView
                    x:Name="CollectionViewMenuItems"
                    ItemsSource="{Binding MenuItems}"
                    SelectionChanged="MenuItemSelected"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:HomePageMenuItem">
                            <StackLayout HeightRequest="55" Padding="10,0">
                                <Label
                                    Text="{Binding Title}"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="CenterAndExpand"
                                    FontSize="Default"
                                    TextColor="Black" />
                                <StackLayout
                                    BackgroundColor="LightGray"
                                    HeightRequest="0.5" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.FooterTemplate>
                        <DataTemplate>
                            <Grid HeightRequest="50" />
                        </DataTemplate>
                    </CollectionView.FooterTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>