<?xml version="1.0" encoding="utf-8"?>

<pages:BaseComponentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
                         xmlns:classicComponent="clr-namespace:ScanbotSDK.MAUI.Barcode.ClassicComponent;assembly=ScanbotSDK.Shared"
                         xmlns:pages="clr-namespace:ScanbotSDK.MAUI.Example.ClassicUI"
                         x:Class="ScanbotSDK.MAUI.Example.ClassicUI.Pages.BarcodeScanAndCountClassicComponentPage"
                         ios:Page.UseSafeArea="true"
                         Title="Classic ScanAndCount">
    <Grid RowSpacing="10"
          RowDefinitions="7*,3*">
        <Grid
            Grid.Row="0">
            <classicComponent:BarcodeScanAndCountView
                x:Name="CameraView"
                OnBarcodeScanResult="OnBarcodeScanResult"
                OnScanAndCountFinished="OnScanAndCountFinished" />
        </Grid>
        <ScrollView Grid.Row="1">
            <StackLayout>
                <StackLayout
                    Orientation="Horizontal"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Spacing="10">
                    <Button
                        x:Name="StartScanningButton"
                        Text="Capture"
                        VerticalOptions="Center"
                        Clicked="OnStartScanningButtonClicked" />
                    <Button
                        x:Name="ContinueScanningButton"
                        Text="Continue"
                        VerticalOptions="Center"
                        IsEnabled="False"
                        Clicked="OnContinueScanningButtonClicked" />
                </StackLayout>
                <StackLayout>
                    <Label
                        Text="Result"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
                    <Label
                        x:Name="ResultLabel"
                        Margin="15,10"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        VerticalOptions="Fill"
                        HorizontalOptions="Fill" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</pages:BaseComponentPage>