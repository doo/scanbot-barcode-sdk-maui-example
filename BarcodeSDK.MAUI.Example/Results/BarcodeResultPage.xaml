<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:ScanbotSDK.MAUI.Example.Utils.XamlValueConverters"
             xmlns:models="clr-namespace:ScanbotSDK.MAUI.Core.Barcode;assembly=ScanbotSDK.Shared"
             x:Class="ScanbotSDK.MAUI.Example.Results.BarcodeResultPage"
             Title="Barcode Results">
    <ContentPage.Resources>
        <converter:ImageRefToSourceConverter x:Key="ConvertImageRefToSource" />
    </ContentPage.Resources>
    <StackLayout
        BackgroundColor="White">
        <ListView x:Name="ListViewResults"
                  HasUnevenRows="True"
                  ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:BarcodeItem">
                    <ViewCell>
                        <Grid ColumnDefinitions="Auto,*,50">
                            <Image
                                Grid.Column="0"
                                HorizontalOptions="Fill"
                                VerticalOptions="Fill"
                                Aspect="AspectFit"
                                WidthRequest="90"
                                Source="{Binding SourceImage, Converter={StaticResource ConvertImageRefToSource}}">
                                <Image.Triggers>
                                    <DataTrigger TargetType="Image"
                                                 Binding="{Binding SourceImage, TargetNullValue=''}"
                                                 Value="">
                                        <Setter Property="IsVisible"
                                                Value="False"/>
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>
                            <VerticalStackLayout
                                Grid.Column="1"
                                Margin="5">
                                <Label Margin="0,5,0,0"
                                       Text="Format:"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="Black" />
                                <Label
                                    Text="{Binding Format}"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Start"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    TextColor="Black" />
                                <Label
                                    Margin="0,9,0,0"
                                    Text="Text: "
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    TextColor="Black" />
                                <Label Text="{Binding Text}"
                                       FontSize="14"
                                       MaxLines="3"
                                       TextColor="Black" />
                            </VerticalStackLayout>
                            <Grid Grid.Column="2">
                                <Label Text=">"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />
                            </Grid>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>