<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context="io.scanbot.sdk.internal.demo.io.scanbot.sdk.internaldemo.MainActivity">

			<TextView
				android:id="@+id/textView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:fontFamily="sans-serif-medium"
				android:paddingLeft="16dp"
                android:paddingRight="16dp"
				android:text="Scanbot Barcode Scanner SDK Demo"
				android:textColor="#ffffff"
				android:textSize="20sp"
				android:textStyle="normal" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-medium"
				android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
				android:text="This is a simple demo to showcase our Barcode SDK main functionalities."
				android:textSize="14sp"
				android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/warning_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/warning_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"
                    android:text="No license key found. The SDK features will stop working after one minute."
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classic Components"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@color/scanbotRed"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:padding="16dp"
            />

			<TextView
				android:id="@+id/barcode_camera_demo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:text="Barcode Camera View"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                android:layout_margin="0dp"
				style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
				android:textColor="@color/primary_material_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

			<TextView
				android:id="@+id/barcode_camerax_demo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:text="Barcode Camera View (Camera X)"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
				style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
				android:textColor="@color/primary_material_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to Use UI"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@color/scanbotRed"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:padding="16dp"
            />

            <TextView
                android:id="@+id/rtu_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:text="Barcode Scanner"
                android:textColor="@color/primary_material_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/rtu_ui_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:text="Barcode Scanner with Image"
                android:textColor="@color/primary_material_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/batch_rtu_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:text="Batch Barcode Scanner"
                android:textColor="@color/primary_material_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDK Operations"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@color/scanbotRed"
                android:gravity="center_vertical"
                android:layout_gravity="left"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
            />

            <TextView
                android:id="@+id/rtu_ui_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:text="Detect Barcode on Image"
                android:textColor="@color/primary_material_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/clear_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:text="Clear image storage"
                android:textColor="@color/primary_material_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/license_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:text="View license info"
                android:textColor="@color/primary_material_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@color/scanbotRed"
                android:gravity="center_vertical"
                android:layout_gravity="left"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
            />

            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
				android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                style="@style/Scanbot.Demo.MaterialTwoButtonTeaser.Button"
                android:text="Set accepted barcodes"
                android:textColor="@color/primary_material_light" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50000000" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>